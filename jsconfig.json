{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs"
    },
    "filesGlob": [
        "./**/*.js",
        "./**/*.jsx"
    ],
    "exclude": [
        "./**/*.min.js",
        "./**/*.debug.js",
        "./gulpfile.js",
        "./babel/*.js",
        "./node_modules/**/*.js",
        "./bower_components/**/*.js",
        "./typings/**/*.js",
        "./node_modules/**/*.jsx",
        "./bower_components/**/*.jsx",
        "./typings/**/*.jsx"
    ]
}